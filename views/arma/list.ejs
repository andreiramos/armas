<%- include('../cabecalho') -%>
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>ARMAS</h2>
        </div>
        <!-- Hover Rows -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <form action="/arma" method="POST">
                            <div class="row">
                                <div class="col-md-10">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" name="pesquisa" class="form-control"
                                                placeholder="Pesquisando..">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" style="margin-top:0px;" class="btn btn-primary m-t-15 waves-effect">Pesquisa</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="body table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nome</th>
                                    <th>Fabricação</th>
                                    <th>Cliente</th>
                                    <th>Filial</th>
                                    <th>Vendedor</th>
                                    <th>Foto</th>
                                    <th>Edita</th>
                                    <th>Deleta</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% Armas.forEach(function(arma){ %>
                                <tr>
                                    <th scope="row"><%=arma._id%></th>
                                    <td><%=arma.titulo%></td>
                                    <td><%=arma.isbn%></td>
                                    <td><%=arma.cliente.nome%></td>
                                    <td><%=arma.loja.nome%></td>
                                    <td>
                                        <% arma.funcionarios.forEach(function(funcionarios){ %>
                                            <%=funcionarios.nome%><br>
                                        <%});%><br>
                                    </td>
                                    <td>
                                        <img style="height: 50px;" src="/arquivos/<%=arma.foto%>">
                                    </td>
                                    <td>
                                        <a href="/arma/edit/<%=arma._id%>"
                                            class="btn btn-warning btn-circle-lg waves-effect waves-circle waves-float">
                                            <i class="material-icons">edit</i>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/arma/del/<%=arma._id%>"
                                            class="btn btn-danger btn-circle-lg waves-effect waves-circle waves-float">
                                            <i class="material-icons">delete</i>
                                        </a>
                                    </td>
                                </tr>
                                <%});%>
                            </tbody>
                            <tfoot>
                                <% if(typeof msg !== "undefined"){ %>
                                <div class="alert bg-green alert-dismissible" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                            aria-hidden="true">&times;</span></button>
                                    <%=msg%>
                                </div>
                                <% } %>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Hover Rows -->

    </div>
</section>
<%- include('../rodape') -%>